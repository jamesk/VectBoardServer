# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       controllers.Application.index()
GET     /uploads/*file                          controllers.Application.getUpload(file: String)
# Map static resources from the /app/public folder to the /public path
GET     /assets/*file                           controllers.Assets.at(path="/public", file)

POST    /upload                                 controllers.Application.upload(qqfile: String, greyThreshold: Double, highpassFilter: Int, turd: Int)
POST    /reprocess                                controllers.Application.reprocess(filename: String, greyThreshold: Double, highpassFilter: Int, turd: Int)
# Catch all
#*       /{controller}/{action}                  {controller}.{action}
